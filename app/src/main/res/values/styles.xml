<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.App.Input.Parent" parent="">
        <item name="android:paddingStart">@dimen/dp_10</item>
        <item name="android:paddingEnd">@dimen/dp_10</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/bg_item_input</item>
    </style>

    <style name="Widget.App.TextView.Label" parent="">
        <item name="android:textColor">@color/color_text_black_secondary</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Widget.App.TextView.Input" parent="">
        <item name="android:textColor">@color/color_text_black_primary</item>
        <item name="android:layout_marginStart">@dimen/dp_8</item>
        <item name="android:gravity">center_vertical</item>
        <item name="maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:autoSizeMaxTextSize">@dimen/sp_16</item>
        <item name="android:autoSizeMinTextSize">@dimen/sp_12</item>
        <item name="android:autoSizeStepGranularity">@dimen/sp_2</item>
    </style>

    <style name="Item.AutoSizeText" parent="">
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:autoSizeMaxTextSize">@dimen/sp_16</item>
        <item name="android:autoSizeMinTextSize">@dimen/sp_12</item>
        <item name="android:autoSizeStepGranularity">1sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Item.AutoSizeText.Small" parent="Item.AutoSizeText">
        <item name="android:autoSizeMaxTextSize">@dimen/sp_12</item>
        <item name="android:autoSizeMinTextSize">@dimen/sp_10</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>

    <style name="Item.AutoSizeText.Title" parent="Item.AutoSizeText">
        <item name="android:autoSizeMaxTextSize">@dimen/sp_18</item>
        <item name="android:textSize">@dimen/sp_18</item>
    </style>

    <style name="Widget.Text.Info" parent="Item.AutoSizeText">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/dp_8</item>
        <item name="android:paddingEnd">@dimen/dp_8</item>
    </style>

    <style name="Widget.Text.Print" parent="">
        <item name="android:gravity">center</item>
        <item name="maxLines">1</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/black</item>
    </style>

    /** -------------------------------------- 浮动窗口动画 -----------------------------------------

    <style name="anim_float_view">
        <item name="android:windowEnterAnimation">@anim/push_up_in</item>
        <item name="android:windowExitAnimation">@anim/push_up_out</item>
    </style>
</resources>