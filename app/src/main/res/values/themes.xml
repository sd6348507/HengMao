<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterAnimation">@anim/fade_enter</item>
        <item name="android:windowExitAnimation">@anim/fade_exit</item>
        <item name="android:actionBarSize">@dimen/dp_48</item>
        <item name="android:listDivider">@drawable/bg_divider</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Widget.App.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:gravity">center</item>
        <item name="buttonGravity">top</item>
        <item name="android:background">@color/white</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="titleMargin">@dimen/dp_4</item>
        <item name="contentInsetStart">@dimen/dp_0</item>
        <item name="contentInsetStartWithNavigation">@dimen/dp_0</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="AppTheme.Spinner" parent="Platform.Widget.AppCompat.Spinner">
        <item name="android:popupBackground">@drawable/abc_popup_background_mtrl_mult</item>
        <item name="android:dropDownVerticalOffset">@dimen/dp_32</item>
        <item name="android:dropDownHorizontalOffset">@dimen/dp_0</item>
    </style>

    /** -------------------------------------- Dialog -----------------------------------------

    <style name="Theme.App.Dialog.NoBackground" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.35</item>
    </style>

    <style name="Theme.App.Dialog.Bottom" parent="Theme.App.Dialog.NoBackground">
        <item name="android:textColorPrimary">@color/color_text_black_primary</item>
        <item name="android:textColorSecondary">@color/color_text_black_secondary</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowEnterAnimation">@anim/dialog_push_up_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_push_up_out</item>
    </style>

    <style name="Theme.App.Dialog.Alert" parent="Theme.App.Dialog.NoBackground">
        <item name="android:textColorPrimary">@color/color_text_black_primary</item>
        <item name="android:textColorSecondary">@color/color_text_black_secondary</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="Theme.App.Dialog.Wait" parent="Theme.App.Dialog.NoBackground">
        <item name="android:textColorPrimary">@color/color_text_black_primary</item>
        <item name="android:textColorSecondary">@color/color_text_black_secondary</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowBackground">@drawable/abc_dialog_material_background</item>
    </style>

</resources>