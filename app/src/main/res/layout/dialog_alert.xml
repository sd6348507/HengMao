<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_alert_dialog">

    <TextView
        android:id="@+id/dialog_alert_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dp_48"
        android:gravity="center"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="@string/action_delete" />

    <TextView
        android:id="@+id/dialog_alert_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/dialog_alert_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="清空数据清空数清空数据清空数据" />

    <View
        android:id="@+id/divider_v"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@color/divider"
        app:layout_constraintTop_toBottomOf="@id/dialog_alert_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <View
        android:id="@+id/divider_h"
        android:layout_width="1dp"
        android:layout_height="@dimen/dp_48"
        android:background="@color/divider"
        app:layout_constraintHorizontal_bias=".5"
        app:layout_constraintTop_toBottomOf="@id/divider_v"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/dialog_alert_cancel"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_48"
        android:gravity="center"
        android:text="@string/label_no"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintTop_toBottomOf="@id/divider_v"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/divider_h"/>

    <TextView
        android:id="@+id/dialog_alert_confirm"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_48"
        android:gravity="center"
        android:text="@string/label_yes"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintTop_toBottomOf="@id/divider_v"
        app:layout_constraintLeft_toRightOf="@id/divider_h"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>